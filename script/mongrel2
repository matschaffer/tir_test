#!/bin/sh

cd `dirname $0`
cd ..

export LD_LIBRARY_PATH="`pwd`/vendor/lib"
export PATH="`pwd`/vendor/bin:$PATH"

CONF=conf/mongrel2.conf
DB=conf/mongrel2.sqlite

mkdir -p run logs tmp

case $1 in
  stop)
    m2sh stop -db $DB -host localhost
    ;;
  start)
    m2sh load  -db $DB -config $CONF
    m2sh start -db $DB -host localhost
    ;;
  *)
    exec $0 start
esac
